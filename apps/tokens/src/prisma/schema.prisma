generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("TOKENS_DATABASE_URL")
}

model Tokens {
  id String @id @default(uuid())

  token String
  tokenHash String @map("token_hash")
  email String
  type TokenType

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  @@map("tokens")
}

enum TokenType {
  RESET_PASSWORD
  TWO_FACTOR
  EMAIL_CONFIRMATION
}
