generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("MOVIES_DATABASE_URL")
}

model Movies {
  id String @id @default(uuid())
  slug String @unique
  title String @unique
  poster String 
  bigPoster String 
  videoUrl String 
  year Int 
  duration Int 
  country String 

  actorsIds String[]
  genresIds String[]

  isSendTelegram Boolean? @default(false)
  rating Float? @default(4.0)
  countOpened Int? @default(0)

  createdAt DateTime @default(now()) @map("created_at") 
  updatedAt DateTime @updatedAt() @map("updated_at") 

  @@map("movies")
}

