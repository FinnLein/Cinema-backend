generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("USERS_DATABASE_URL")
}

model Users {
  id String @id @default(uuid())

  username String 
  email String @unique
  password String 
  picture String?
  role UserRole[] @default([USER])
  isVerified Boolean  @default(false) @map("is_verified")
  isTwoFactor Boolean  @default(false) @map("is_two_factor")
  method AuthMethod

  createdAt DateTime @default(now()) @map("created_at") 
  updatedAt DateTime @updatedAt() @map("updated_at") 

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
  PREMIUM
}

enum AuthMethod {
  CREDENTIALS
  GOOGLE 
  YANDEX
}