	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@types/express": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@types/nodemailer": "^7.0.3",
		"@types/passport-jwt": "^4.0.1",
		"@types/react": "^19.2.2",
		"@types/supertest": "^6.0.2",
		"concurrently": "^9.2.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
