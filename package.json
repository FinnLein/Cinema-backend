		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"dev": "nest start --watch",
		"dev:accounts": "bun dev accounts",
		"dev:actors": "bun dev actors",
		"dev:auth": "bun dev auth",
		"dev:email": "bun dev email",
		"dev:gateway": "bun dev gateway",
		"dev:genres": "bun dev genres",
		"dev:jwt-tokens": "bun dev jwt-tokens",
		"dev:movies": "bun dev movies",
		"dev:tokens": "bun dev tokens",
		"dev:users": "bun dev users",
		"build:gateway": "nest build gateway",
		"build:auth": "nest build auth",
		"build:users": "nest build users",
		"build:email": "nest build email",
		"build:accounts": "nest build accounts",
		"start:gateway": "nest start gateway",
		"start:auth": "nest start auth",
		"start:users": "nest start users",
		"start:email": "nest start email",
		"start:accounts": "nest start accounts",
		"dev:movies-cluster": "concurrently 'bun dev:gateway' 'bun dev:jwt-tokens' 'bun dev:movies' 'bun dev:genres' 'bun dev:actors'",
		"dev:all": "concurrently 'bun dev:accounts' 'bun dev:auth' 'bun dev:email' 'bun dev:gateway' 'bun dev:jwt-tokens' 'bun dev:tokens' 'bun dev:users' 'bun dev:movies'",
		"build:all": "concurrently 'bun build:gateway' 'bun build:auth' 'bun build:users' 'bun build:email' 'bun build:accounts'",
		"start:all": "concurrently 'bun start:gateway' 'bun start:auth' 'bun start:users' 'bun start:email' 'bun start:accounts'",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/apps/backend/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./apps/backend/test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs-modules/mailer": "^2.0.2",
